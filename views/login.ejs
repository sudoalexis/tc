<%- include ("./partials/cabecera") %> 
<%- rolAdmin!=false?include("./partials/navbar"):include("./partials/navbarUser")%> 

<style>

   
@media (max-width: 1700px) {
    .formulario{
      width: 40%;
    }
}
    
  @media (max-width: 600px) {
    .formulario{
      width: 100%;
      height: 100%;
    }
    .email .password {
      min-width: 80%;
    }
  }
  </style>
<div class="text-center mt-5 mb-5">

    <form class="container formulario col-3 mt-5" action="/login" method="post">
        <img class="mb-4" src="./img/logo.png" alt="" width="120" height="100">
        <h1 class="h3 mb-3 fw-normal text-info">Iniciar sesión</h1>
        <%- msg==true?'<p class="mt-3 text-success">Restauraste tu contraseña puedes iniciar sesión</p>':''%> 

       
    
        <div class="form-floating text-dark mt-5">
          <input type="email" name="email" class="form-control email" placeholder="name@example.com" required>
          <label for="floatingInput" class="">Email</label>
        </div>
        <div class="form-floating mt-4 text-dark">
          <input type="password" class="form-control password" id="floatingPassword" name="password" placeholder="Password" required>
          <label for="floatingPassword">Password</label>
        </div>
    
        <div class="checkbox mb-3">
    
        </div>
        <div class="help">
        
          <%- nouser==false?'<p class="mt-3 text-danger"> Error correo o contraseña incorrectas</p>':''%> 
  
      </div>
        <button class="w-100 mt-4 btn btn-lg btn-info" type="submit">Iniciar sesión</button>
       
      </form>
      <br>
      <a href="/resetpassword" class="text-white forgot-password1 mt-4">Olvidaste la contraseña?</a>
      <br>
      <a href="/register" class="text-white forgot-password1 mt-4">Registrarse</a>


    </div>
